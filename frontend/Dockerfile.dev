FROM node:22-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

RUN chmod +x entrypoint.sh

EXPOSE 5173

# Use entrypoint if you have it, otherwise use CMD
ENTRYPOINT ["/bin/sh", "/app/entrypoint.sh"]
# Or if no entrypoint: CMD ["npm", "run", "dev", "--", "--host"]